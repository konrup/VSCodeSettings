{
    //common
    "diffEditor.ignoreTrimWhitespace": false,
    "explorer.openEditors.visible": 0,
    "editor.tabSize": 2,
    "editor.minimap.enabled": false,
    "editor.mouseWheelZoom": true,
    "editor.mouseWheelScrollSensitivity": 2,
    "editor.renderIndentGuides": true,
    "editor.scrollBeyondLastLine": true,
    "extensions.ignoreRecommendations": true,
    "editor.rulers": [
        100
    ],
    "editor.wordWrap": "on",
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "smooth",
    "files.hotExit": "onExit",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.enableSmartCommit": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "window.zoomLevel": -1,
    "window.menuBarVisibility": "toggle",
    "workbench.statusBar.feedback.visible": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "zenMode.hideTabs": false,
    // extensions
    "gitlens.codeLens.enabled": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": true,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },
    "breadcrumbs.enabled": true,
    "todo.timekeeping.started.format": "DD.MM.YYYY HH:mm",
    "todo.timekeeping.finished.format": "DD.MM.YYYY HH:mm",
    "todo.timekeeping.created.format": "DD.MM.YYYY HH:mm",
    "todo.timekeeping.created.enabled": true,
    "todo.statistics.statusbar.text": "$(check) [finished]/[all] ðŸ•‘ [est]",
    "todo.colors.tag": "#75715e",
    "todo.archive.remove.emptyProjects": false,
    "editor.suggestSelection": "first"
}
